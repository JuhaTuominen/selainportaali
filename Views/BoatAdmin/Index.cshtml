@model IEnumerable<SeaMODEPortal.Models.Login>

@{
    ViewBag.Title = "Boat crew";
}

<h2>Boat crew member</h2>

@foreach (var item in Model) 
{ 
    <p>
        @Html.ActionLink("Create New", "Create", new { id = item.LoginID })
    </p>
}

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Boat)</th>
        <th>@Html.DisplayNameFor(model => model.UserName)</th>
        <th>@Html.DisplayNameFor(model => model.PassWord)</th>
        <th>@Html.DisplayNameFor(model => model.AccessLvl)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@Html.DisplayFor(modelItem => item.BoatID)</td>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
            <td>@Html.DisplayFor(modelItem => item.PassWord)</td>
            <td>@Html.DisplayFor(modelItem => item.AccessLvl)</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LoginID }, new { @class="fas fa-user-edit" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LoginID }, new { @class = "fas fa-trash" })
            </td>
        </tr>
    }

</table>
