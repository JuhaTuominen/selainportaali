<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeaMODE&#8482; Portal</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css"  type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="py-lg-3 d-flex justify-content-center">
        <h1 class="sr-only">SeaMODE&#8482; Portal</h1>
        <div class="mw-75">
            <img class="img-fluid" src="~/Content/Pics/emasalo-1-220815_banner1400x230.jpg" alt="Tausta " />
        </div>
    </header>

@{
    if (Session["UserName"] == null)
    {
        Html.RenderPartial("_NavBarLoggedOut");
    }
    else
    {
        Html.RenderPartial("_NavBarLoggedIn");
    }
}


<div class="p-3 container body-content">
    <main class="jumbotron" id="layout">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2021 @*@DateTime.Now.Year (tätä ei laiteta näin! vaan copyright vuosi on se jolloin sivut on tehty!)*@  - SeaMODE&#8482; - @ViewBag.LoggedStatus @Session["UserName"]</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        function DownloadFile(FileId) {
            $("#hfFileId").val(FileId);
            $("#btnDownload")[0].click();
        };
    </script>
</body>
</html>
